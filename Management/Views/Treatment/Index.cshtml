@model IEnumerable<Treatment>
@{
    ViewData["Title"] = "Index";
}

@if (!string.IsNullOrEmpty(ViewBag.AnimalName))
{
    <h1>Treatments of @ViewBag.AnimalName</h1>
}
else
{
    <h1>Treatments</h1>
}

<p>
    @Html.ActionLink("Add new treatment", "Create", new { animalId = (int)ViewBag.AnimalId }, null)
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumAge)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor: pointer;" onclick="location.href = '@Url.Action("Details", "Treatment", new { id = item.ID, animalId = (int)ViewBag.AnimalId })'">
                <td>
                    @Html.DisplayFor(modelItem => item.TreatmentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimumAge)
                </td>
            </tr>
        }
    </tbody>
</table>