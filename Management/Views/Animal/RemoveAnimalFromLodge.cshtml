@model AnimalViewModel

@{ ViewData["Title"] = "Remove animal from lodging"; }

<h1>Remove this animal from it's current lodge?</h1>

<h4>@Model.Animal.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RemoveAnimalFromLodge">
            <p style="color: red; font-size: 16px;">@ViewBag.Message</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Animal.ID" />
            <input type="hidden" asp-for="Lodging.ID" />
            <div class="form-group">
                <label class="control-label">Current location:</label>
                <p>@Model.Lodging.Description</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Remove" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}